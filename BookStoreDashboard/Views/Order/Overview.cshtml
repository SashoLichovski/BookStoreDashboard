@model List<BookStoreDashboard.Models.OrderDto>

<div class="container">
    <br />
    <h3>Manage orders</h3>
    <br />

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Adress</th>
                <th>Phone</th>
                <th>Order price</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Name</td>
                    <td>@order.Adress</td>
                    <td>@order.Phone</td>
                    <td>@order.FullPrice</td>
                    <td>@order.Status.ToString()</td>
                    <td>
                        @if (order.Status == EnumStatus.Pending)
                        {
                            <a asp-action="Update" asp-route-orderId="@order.Id" asp-route-status="@EnumStatus.InProcess" class="btn btn-primary btn-sm">Set to InProcess</a>
                        }
                        else if (order.Status == EnumStatus.InProcess)
                        {
                            <a asp-action="Update" asp-route-orderId="@order.Id" asp-route-status="@EnumStatus.Delivered" class="btn btn-success btn-sm">Set to Delivered</a>
                        }
                        else
                        {
                            <p class="text-success">Delivered</p>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>